{
  "compilerOptions": {

    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}










